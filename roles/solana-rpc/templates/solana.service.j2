[Unit]
Description=Solana RPC Node
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
User={{ solana_user }}
Group={{ solana_user }}
Restart=always
RestartSec=30
LimitNOFILE=1000000
LogRateLimitIntervalSec=0
Environment="PATH={{ solana_base_path }}/.local/share/solana/install/active_release/bin:$PATH"
ExecStart={{ solana_base_path }}/solana.sh

[Install]
WantedBy=multi-user.target
